# Environment Variables for Sourcer MVP
# Copy this file to .env and update values as needed

# Application Mode
DEBUG=false
LOG_LEVEL=INFO

# Model Paths (override defaults from settings.ini)
# YOLO_MODEL_PATH=/custom/path/to/yolo/model.pt
# SAM_MODEL_PATH=/custom/path/to/sam/model.pt
# LLAVA_MODEL_PATH=/custom/path/to/llava/model
# STT_MODEL_PATH=/custom/path/to/stt/model
# TTS_MODEL_PATH=/custom/path/to/tts/model.onnx

# PostHog Analytics (optional)
POSTHOG_API_KEY=your_posthog_api_key_here
ENABLE_ANALYTICS=false

# Performance Settings
ENABLE_GPU=true
MAX_THREADS=4

# Development Settings
MOCK_CAMERA=false
MOCK_MODELS=false